<!DOCTYPE html>
<%= render :partial => "/shared/html_tag" %>
  <% site_bar = render(:partial => "/shared/site_bar", :locals => {:head => true}) -%>
  <%= render :partial => "/layouts/custom_head" %>
  <body>
    <%= site_bar -%>
    <%= render :partial => "/shared/ie6check" if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <div id="container">
      <header>
        <%= render :partial => "/shared/header" -%>
      </header>
      <%= yield %>
    </div>
    <footer>
    <%= render :partial => "/shared/footer" -%>
    </footer>
    <%= render :partial => '/layouts/custom_javascripts' %>
    <%= render :partial => "/shared/javascripts" %>
  </body>
</html>
