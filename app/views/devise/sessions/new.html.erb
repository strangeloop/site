<%= render 'shared/title',  :title => t('.attendee_login_title') %>

<div class="container_12">
  <%= render '/shared/flash', :flash => flash %>
  <div class="grid_12 pad3">
    <div class="login whitebox">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= field_set_tag '' do %>
          <ul>
            <li><%= f.label :email, t('.email') %><%= f.email_field :email %></li>
            <li><%= f.label :password, t('.password') %><%= f.password_field :password %></li>
            <% if devise_mapping.rememberable? -%>
              <li><%= f.label :remember_me, t('.remember_me') %> <%= f.check_box :remember_me %></li>
            <% end -%>
            <li><%= submit_tag t('.login'), :class => 'submit' %></li>
          </ul>
          <%= render :partial => "devise/shared/links" %>
        <% end -%>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
</div>



