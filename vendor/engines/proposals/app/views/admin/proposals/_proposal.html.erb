<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(proposal) -%>">
  <span style="float: right;"><%= ratings_for proposal, :show_user_rating => true, :dimension => :appeal, :wrap => false, :remote_options => { :url => '' } %></span>
  <span class='title'>
    <%- speaker = current_user.has_role?(:organizer) ? "( #{speaker_for proposal.talk} )" : "" %>
    <%= link_to "#{title_for proposal} #{ speaker }", edit_admin_proposal_path(proposal) %>
  </span>
  <span class="title"><%= proposal.status %></span>
</li>
