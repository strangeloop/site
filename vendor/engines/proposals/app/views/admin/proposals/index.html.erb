<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% else %>
    <h2><%= t('.all_proposals') %></h2>
  <% end %>
  <% if @proposals.any? %>
    <%= will_paginate @proposals %>

    <%= render :partial => "sortable_list" %>

    <%= will_paginate @proposals %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Admin::ProposalsController.searchable? %>
      <li>
        <%= render :partial => "/shared/admin/search",
                    :locals => {
                      :url => admin_proposals_url
                    } %>
      </li>
    <% end %>
  <% if !searching? and Proposal.count > 1 and Admin::ProposalsController.sortable? %>
    <li>
      <%= link_to t('.reorder', :what => "Proposals"),
                   admin_proposals_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Proposals"),
                   admin_proposals_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
    <li><%= link_to "Export Pending Proposals", export_admin_proposals_path("csv") %></li>
  </ul>
</div>
<%= render :partial => "/shared/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Proposal.count > 1 %>
