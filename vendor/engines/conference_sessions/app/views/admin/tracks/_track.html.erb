<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(track) -%>">
  <span class='title'>
    <%= track.title %>
    <span class="trackball" style="background-color: #<%= track.color %>;"></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_track_path(track),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_track_path(track),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => track.title),
        :method => :delete %>
  </span>
</li>



