<%= form_for [:admin, @track], :validate => true do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @track,
          :include_object_name => true
        } %>

  <div class="field">
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color, :class => 'color' %>
  </div>


  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.tracks.track'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @track.title)
              } %>

<% end %>



