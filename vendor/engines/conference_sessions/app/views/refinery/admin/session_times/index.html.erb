<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @session_times.any? %>
    <div class='pagination_container'>
      <%= render 'session_times', :session_times => @session_times %>
    </div>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Refinery::Admin::SessionTimesController.searchable? %>
      <li>
        <%= render "/fefinery/admin/search", :url => refinery.admin_session_times_url %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), refinery.new_admin_session_time_url, :class => "add_icon" %>
    </li>
    <li>
      <%= link_to t('.back_to_conf_sessions'), refinery.admin_conference_sessions_url, :class => "back_icon" %>
    </li>
  </ul>
</div>

