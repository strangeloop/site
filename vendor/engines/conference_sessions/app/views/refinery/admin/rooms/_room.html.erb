<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(room) -%>">
  <span class='title'>
    <%= room.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_room_path(room),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_room_path(room),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => room.name),
        :method => :delete %>
  </span>
</li>

