<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @rooms.any? %>
    <div class='pagination_container'>
      <%= render 'rooms', :rooms => @rooms %>
    </div>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Refinery::Admin::RoomsController.searchable? %>
      <li>
        <%= render "/refinery/admin/search", :url => refinery.admin_rooms_url %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), refinery.new_admin_room_url, :class => "add_icon" %>
    </li>
    <% if !searching? and Refinery::Admin::RoomsController.sortable? and Room.count > 1 %>
      <li>
        <%= link_to t('.reorder', :what => "Rooms"),
          refinery.admin_rooms_url,
          :id => "reorder_action",
          :class => "reorder_icon" %>

          <%= link_to t('.reorder_done', :what => "Rooms"),
            refinery.admin_rooms_url,
            :id => "reorder_action_done",
            :style => "display: none;",
            :class => "reorder_icon" %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.back_to_conf_sessions'), refinery.admin_conference_sessions_url, :class => "back_icon" %>
    </li>
  </ul>
</div>
<%= render("/refinery/admin/make_sortable", :tree => false) if !searching? and Refinery::Admin::RoomsController.sortable? and Room.count > 1 %>

