<%= form_for [:admin, room], :validate => true do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => room,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.text_field :capacity %>
  </div>

  <div class="field">
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.rooms.room'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @room.name)
              } %>

<% end %>

