<% if sessions_by_format.include? format -%>
  <div class="overflow p3">
    <h3><%= label %></h3>
    <hr>
  </div>
  <% sessions_by_format[format].each_slice(4) do |session_group| -%>
    <div class="overflow p3">
      <% session_group.each do |session| -%>
        <%= render 'session', :talk => session.talk,
                              :speaker => session.talk.speakers.first,
                              :session => session %>
      <% end -%>
    </div>
  <% end -%>
<% end -%>
