<div class="grid_6 p3 speaker">
  <%= link_to image_tag_for(speaker.image), session, :class => 'pic' %>
  <h4>
    <%= link_to speaker_for(talk), session %>
  </h4>
  <h5><%= link_to speaker.company, speaker.company_url %></h5>
  <%= twitter_link speaker.twitter_id %>
  <p></p>
  <h4><%= link_to content_tag(:em, talk.title), session %></h4>
  <p></p>
  <p>
    <strong>Bio:</strong>
    <%= raw textilize(speaker.bio) %>
  </p>
</div>

