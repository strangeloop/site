<div class="row_top_tile_sub">
  <div class="container_12">
    <div class="grid_8">
      <div class="page_title">
        <%= "#{year} Preconference" %>
      </div>
    </div>
  </div>
</div>
<div id="main" class="shape">
  <div class="container_12 pad3">
    <%= raw t('.call_for_workshops_message', :next_conf_year => Time.now.year) %>
    <% %w(elc workshop).each do |format| -%>

    <%= render 'session_groups',  :sessions_by_format => sessions_by_format,
                                  :format => format.gsub('_', ' '),
                                  :label => t(".#{format}") %>

    <% end -%>

    <% unless sessions_by_format.keys.any? {|session| %w(elc workshop).include? session} -%>
      <%= t('.no_sessions_message', :next_conf_year => Time.now.year).html_safe %>
    <% end -%>
  </div>
</div>
