<div id="main" class="shape">
  <div class="container_12 pad3">
    <div class="grid_11">
      <div class="pic">
        <%= image_tag_for(speaker.image) %>
      </div>

      <h3><%= talk.title %></h3>
      <%= raw textilize(talk.abstract) %>
      <p></p>
      <% unless talk.prereqs.blank? %>
        <h4>Prerequisites</h4>
        <p><%= talk.prereqs %></p>
      <% end %>
      <% unless talk.tag_list.empty? %>
        <h4>Tag List</h4>
        <%= talk.tag_list %>
        <p></p>
      <% end %>
      <% talk.speakers.each do |speaker| %>
        <h4><%= "#{speaker.first_name} #{speaker.last_name}" %></h4>
        <h5><%= link_to speaker.company, speaker.company_url, :target => '_blank' %></h5>
        <%= twitter_link speaker.twitter_id %>
        <p>
          <strong>Bio:</strong>
          <%= raw textilize(speaker.bio) %>
        </p>
    <% end %>
    <% if conference_session.conf_year == Time.now.year %>
      <div class="session_message"><%= t(".#{conference_session.format}_session_message") %></div>
    <% end %>
    </div>
  </div>
</div>

