<div class="row_top_tile_sub">
  <div class="container_12">
    <div class="grid_8">
      <div class="page_title">
        <%= "#{year} Sessions" %>
      </div>
    </div>
  </div>
</div>
<div id="main" class="shape">
  <div class="container_12 pad3">
    <% if sessions_by_format.include? 'keynote' -%>
    <div class="overflow p3">
      <h3>Keynotes</h3>
      <hr>
    </div>
    <div class="overflow p1">
      <% sessions_by_format['keynote'].each do |session| %>

        <%= render 'keynote', :talk => session.talk,
                              :speaker => session.talk.speakers.first,
                              :session => session %>
      <% end %>
    </div>
    <% end -%>

    <% %w(talk lightning strange_passions panel).each do |format| -%>

    <%= render 'session_groups',  :sessions_by_format => sessions_by_format,
                                  :format => format.gsub('_', ' '),
                                  :label => t(".#{format}") %>

    <% end -%>

    <% if (sessions_by_format.keys - %w(keynote talk lightning strange_passions panel)).empty? -%>
      <%= t('.no_sessions_message', :next_conf_year => Time.now.year).html_safe %>
    <% end -%>
  </div>
</div>
