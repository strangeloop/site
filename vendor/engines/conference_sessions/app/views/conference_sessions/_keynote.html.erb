<div class="grid_6 p3 speaker">
  <%= link_to image_tag_for(speakers.first.image), session, :class => 'pic' %>
  <%= render :partial => 'speaker', :collection => speakers, :locals => {:session => session} %>
  <p></p>
  <h4><%= link_to content_tag(:em, talk.title), session %></h4>
  <p></p>
  <%= render :partial => 'bio', :collection => speakers.map(&:bio) %>
</div>

