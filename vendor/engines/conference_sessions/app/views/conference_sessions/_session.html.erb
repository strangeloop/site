<div class="grid_3 speaker">
  <%= link_to image_tag_for(speaker.image, :small), session, :class => 'pic_speaker', :rel => ' ', :target => '_blank' %>
  <div style="float: left;">
    <h4><%= link_to talk.title.truncate(58), session, :target => '_blank' %></h4>
    <% talk.speakers.each do |speaker| %>
      <h5><%= link_to "#{speaker.first_name} #{speaker.last_name}", speaker.company_url, :target => '_blank' %></h5>
      <%= twitter_link speaker.twitter_id, :span %>
  <% end %>
  </div>
</div>
